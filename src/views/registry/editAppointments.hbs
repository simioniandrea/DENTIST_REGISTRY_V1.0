<div class="row">
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/registry/editAppointments/{{app._id}}" method="POST">
                    <div class="form-group">
                        <input type="text" name="date" placeholder="Write your title" value="{{app.date}}"
                            class="form-control" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" name="hour" class="form-control" value="{{app.hour}}"
                            placeholder="Write a description">
                    </div>                                      
                    <button type="submit" class="btn btn-primary btn-block">
                        Update
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>